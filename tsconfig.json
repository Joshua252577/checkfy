{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs", // Ou use "ESNext" se estiver usando ESM no Node.js
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true, // Permite usar 'import' para m√≥dulos CommonJS
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
